{
    "extends": "eslint:recommended",
    "env": {
        "browser": true,
        "mocha": true,
        "node": true
    },
    "globals": {
        "Promise": true
    },
    "rules": {
        "indent": "warn",
        "curly": "warn",
        "eqeqeq": "warn",
        "no-console": "off",
        "object-curly-spacing": "warn",
        "quotes": ["warn", "single"],
        "space-before-function-paren": ["warn", {
            "anonymous": "always",
            "named": "never"
        }],
        "spaced-comment": "warn",
        "semi": ["error", "always"],
        "brace-style": "warn"
    }
}
